<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.loubii.account.ui.avtivity.BalanceActivity">

    <include layout="@layout/layout_toolbar_header_title"/>

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="60dp"
        android:layout_gravity="center_horizontal"
        android:src="@drawable/classify_baby_gray"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="19dp"
        android:text="@string/current_balance"
        android:textColor="@color/colorPrimary"
        android:textSize="13sp"/>
    <TextView
        android:id="@+id/tv_balance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="12dp"
        android:text="2135"
        android:textColor="@color/colorPrimary"
        android:textSize="27sp"/>

    <Button
        android:id="@+id/bt_balance_tixian"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/conor_button_green"
        android:layout_marginTop="60dp"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:textColor="@color/colorTextWhite"
        android:textSize="18sp"
        android:text="@string/balance_tixian"/>
</LinearLayout>
