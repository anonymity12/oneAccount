<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="240dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="10dp"
        android:background="@color/colorPrimary">

        <TextView
            android:id="@+id/tv_expend_total_des"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            tools:text="最近一周支出总额"
            android:textColor="@color/colorTextChartDescribe"
            android:textSize="14sp"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:textSize="14sp"
            android:textColor="@color/colorTextChartDescribe"
            android:text="@string/chart_account_total"
            />
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:textSize="14sp"
            android:textColor="@color/colorTextChartDescribe"
            android:text="@string/chart_account_max"/>
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="3dp"
        android:background="@color/colorPrimary">

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="20dp"
            android:layout_weight="1"
            android:gravity="center_horizontal">
            <TextView
                android:id="@+id/tv_expend_total"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:includeFontPadding="false"
                android:layout_alignParentBottom="true"
                android:text="0"
                android:textColor="@color/colorTextChartDescribe"
                android:textSize="18sp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="1dp"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="1dp"
                android:layout_toRightOf="@id/tv_expend_total"
                android:text="元"
                android:textColor="@color/colorTextChartDescribe"
                android:textSize="10sp"/>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="20dp"
            android:layout_weight="1"
            android:gravity="center_horizontal">
            <TextView
                android:id="@+id/tv_account_total"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:includeFontPadding="false"
                android:layout_alignParentBottom="true"
                android:text="0"
                android:textColor="@color/colorTextChartDescribe"
                android:textSize="18sp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="1dp"
                android:layout_toRightOf="@id/tv_account_total"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="1dp"
                android:text="笔"
                android:textColor="@color/colorTextChartDescribe"
                android:textSize="10sp"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="20dp"
            android:layout_weight="1"
            android:gravity="center_horizontal">
            <TextView
                android:id="@+id/tv_account_max"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:includeFontPadding="false"
                android:layout_alignParentBottom="true"
                android:text="0"
                android:textColor="@color/colorTextChartDescribe"
                android:textSize="18sp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="1dp"
                android:layout_toRightOf="@id/tv_account_max"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="1dp"
                android:text="元"
                android:textColor="@color/colorTextChartDescribe"
                android:textSize="10sp"/>
        </RelativeLayout>
    </LinearLayout>

    <com.beiing.leafchart.SlideSelectLineChart
        android:id="@+id/select_chart"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:background="@color/colorPrimary"
        app:lc_bottomPadding="25dp"
        app:lc_leftPadding="0dp"
        app:layout_collapseMode="parallax"
        app:layout_collapseParallaxMultiplier="0.8"/>
</LinearLayout>